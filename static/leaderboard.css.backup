/* Reset and base styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    min-height: 100vh;
    padding: 20px;
}

.container {
    max-width: 1600px;
    margin: 0 auto;
    background: white;
    border-radius: 15px;
    padding: 30px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
}

/* Header */
header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
}

h1 {
    color: #333;
    font-size: 32px;
}

.refresh-indicator {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 8px 16px;
    background: #e8f5e9;
    border-radius: 20px;
    color: #2e7d32;
    font-weight: 600;
}

.dot {
    width: 10px;
    height: 10px;
    background: #4caf50;
    border-radius: 50%;
    animation: pulse 2s infinite;
}

@keyframes pulse {
    0%, 100% {
        opacity: 1;
    }
    50% {
        opacity: 0.3;
    }
}

/* Table wrapper */
.table-wrapper {
    overflow-x: auto;
    margin-bottom: 30px;
}

/* Table */
.leaderboard {
    width: 100%;
    border-collapse: collapse;
    font-size: 14px;
}

.leaderboard thead {
    position: sticky;
    top: 0;
    z-index: 10;
}

.header-row-1 {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
}

.header-row-2 {
    background: linear-gradient(135deg, #5568d3 0%, #6a3f8f 100%);
    color: white;
}

.leaderboard th {
    padding: 15px 10px;
    text-align: center;
    font-weight: 600;
    border: 1px solid rgba(255, 255, 255, 0.2);
}

.rank-col {
    width: 60px;
}

.team-col {
    min-width: 150px;
    text-align: left !important;
}

.total-col {
    width: 100px;
    font-size: 16px;
}

.questions-header {
    font-size: 16px;
}

/* Table body */
.leaderboard td {
    padding: 12px 10px;
    text-align: center;
    border: 1px solid #ddd;
    vertical-align: middle;
}

.leaderboard tbody tr:nth-child(even) {
    background-color: #f9f9f9;
}

.leaderboard tbody tr:hover {
    background-color: #e3f2fd;
    transform: scale(1.005);
    transition: all 0.2s ease;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

/* Real team highlight */
.real-team-row {
    background: linear-gradient(90deg, #fff3e0 0%, #ffffff 100%) !important;
    font-weight: bold;
    border-left: 5px solid #ff9800;
}

.real-team-row:hover {
    background: linear-gradient(90deg, #ffe0b2 0%, #fff3e0 100%) !important;
}

.real-team-badge {
    font-size: 18px;
    margin-right: 5px;
}

/* Submission indicators */
.submission-cell {
    min-height: 60px;
}

.submission-icons {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 4px;
    margin-bottom: 6px;
    min-height: 24px;
    flex-wrap: wrap;
}

.icon {
    font-size: 18px;
    display: inline-block;
    animation: fadeIn 0.3s ease-in;
}

.icon.correct {
    /* Green checkmark */
}

.icon.wrong {
    /* Red X */
}

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: scale(0.5);
    }
    to {
        opacity: 1;
        transform: scale(1);
    }
}

/* Score styling */
.score {
    font-weight: bold;
    font-size: 16px;
    padding: 4px 10px;
    border-radius: 6px;
    display: inline-block;
    min-width: 50px;
}

.score-high {
    color: #1b5e20;
    background: linear-gradient(135deg, #a5d6a7 0%, #c8e6c9 100%);
    border: 2px solid #4caf50;
}

.score-good {
    color: #33691e;
    background: linear-gradient(135deg, #c5e1a5 0%, #dcedc8 100%);
    border: 2px solid #8bc34a;
}

.score-medium {
    color: #e65100;
    background: linear-gradient(135deg, #ffcc80 0%, #ffe0b2 100%);
    border: 2px solid #ff9800;
}

.score-low {
    color: #b71c1c;
    background: linear-gradient(135deg, #ef9a9a 0%, #ffcdd2 100%);
    border: 2px solid #f44336;
}

.no-submission {
    color: #999;
    font-size: 24px;
    opacity: 0.5;
}

/* Total score */
.total-score {
    font-weight: bold;
    font-size: 20px;
    color: #667eea;
    background: linear-gradient(135deg, #e8eaf6 0%, #f3e5f5 100%);
    padding: 8px;
    border-radius: 8px;
}

/* Rank styling */
.rank-badge {
    font-weight: bold;
    font-size: 18px;
}

.rank-badge.gold {
    color: #ffd700;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
}

.rank-badge.silver {
    color: #c0c0c0;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
}

.rank-badge.bronze {
    color: #cd7f32;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
}

/* Legend */
.legend {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    gap: 25px;
    padding: 20px;
    background: linear-gradient(135deg, #f5f5f5 0%, #e0e0e0 100%);
    border-radius: 10px;
}

.legend-item {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    font-weight: 500;
}

.score-demo {
    padding: 4px 12px;
    border-radius: 4px;
    font-size: 12px;
}

/* Loading state */
.loading {
    text-align: center;
    padding: 40px;
    font-size: 18px;
    color: #999;
}

/* Animations */
@keyframes scoreUpdate {
    0% {
        transform: scale(1);
    }
    50% {
        transform: scale(1.1);
        background: #ffeb3b;
    }
    100% {
        transform: scale(1);
    }
}

.score-updated {
    animation: scoreUpdate 0.5s ease-in-out;
}

/* Responsive */
@media (max-width: 1200px) {
    .container {
        padding: 20px;
    }
    
    h1 {
        font-size: 24px;
    }
    
    .leaderboard {
        font-size: 12px;
    }
    
    .icon {
        font-size: 14px;
    }
}

@media (max-width: 768px) {
    body {
        padding: 10px;
    }
    
    .container {
        padding: 15px;
    }
    
    header {
        flex-direction: column;
        gap: 15px;
    }
    
    .legend {
        flex-direction: column;
        gap: 10px;
    }
}
